    <body>
        <div class="row">
          <div class="col-md-2">
              <div class="pos-f-t">
                
                <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <a>
                    <img src="/image/ICE Final Logo.png" class="d-inline-block align-top"> 
                  </a>    
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    The ICE Foundation
                </nav>
                
                <div class="collapse" id="navbarToggleExternalContent">
                  <div class="bg-dark p-4">
                    <ul class="navbar-nav mr-auto">
                      <li class="nav-item <%= typeof page !== 'undefined' && page === 'poems' ? 'active' : '' %>">
                        <a class="nav-link" href="/poems/index">Poems</a>
                      </li>
                      <li class="nav-item <%= typeof page !== 'undefined' && page === 'prose' ? 'active' : '' %>">
                        <a class="nav-link" href="/proses/index">Prose</a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col-md-10">
              <nav class="navbar navbar-light navbar-expand-md mb-4" style="background-color: #e3f2fd;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav mr-auto">
                   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
