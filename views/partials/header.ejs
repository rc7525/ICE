                   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                   
                    <li> 
                      <h1 style="text-align:center; font-weight: bold; color:gray;">ALL LIVES ARE EQUAL. </h1>
                      <p style="text-align:center; font-weight: bold; color:gray;"> We are impatient optimists woking to alleviate inequity.</p>
                    </li> 
                    
                  </ul>
                  <ul class="navbar-nav">
                      <li class="nav-item"><a class="nav-link" href="/writings/index">Home</a></li>
                      <% if(!currentUser){ %>
                        <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/register">Sign Up</a></li>
                    <% } else { %>
                        Notifications
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                            aria-haspopup="true" aria-epanded="false">Notifications <span class="badge">
                            <%= notifications.length %></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="href-class" href="/notifications">View past notifications</a>
                                </li>
                                <% notifications.forEach(function(notification) { %>
                                    <% if (notification.poemId) { %>
                                        <li>
                                            <a class="href-class" href="/notifications/<%= notification.id %>">
                                                Posted new poem - <%= notification.poemName %>
                                            </a>    
                                        </li>
                                    <% } %>  
                                    <% if (notification.proseId) { %>
                                        <li>
                                            <a class="href-class" href="/notifications/<%= notification.id %>">
                                                Posted new prose - <%= notification.proseName %> 
                                            </a>    
                                        </li>
                                    <% } %>  
                                <% }) %>
                            </ul>
                        </li>
                        
                        <li class="nav-item"><a class="nav-link" href="#">   </a></li>
                        
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                            aria-haspopup="true" aria-epanded="false"> Signed In As <%= currentUser.email %> </a>
                            <ul class="dropdown-menu">
                                <li> <a class="href-class" href="/logout">Logout</a> </li>
                                <li> <a class="href-class" href="/edit-profile">Update Profile</a> </li>
                            </ul>
                        </li>
                      <% } %>   
                    </ul>
                  </div>
                </nav>
                
                <hr style="height:2px;border-width:0;color:gray;background-color:gray"> 
        
            <% if(error && error.length > 0) { %>
                <div class="alert alert-danger normal-font" role="alert">        
                    <%= error %>
                </div>  
            <% } %>  
            <% if(success && success.length > 0) { %>
                <div class="alert alert-success normal-font" role="alert">        
                    <%= success %>
                </div> 
            <% } %>    
       
        




